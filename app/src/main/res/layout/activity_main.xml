<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <!-- Large expression -->
    <TextView
        android:id="@+id/tvExpression"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:ellipsize="start"
        android:maxLines="1"
        android:gravity="end"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"/>

    <!-- Live result smaller -->
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/resultGray"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="end"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvExpression"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Buttons grid container -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:rowCount="5"
        android:columnCount="4"
        android:useDefaultMargins="false"
        app:layout_constraintTop_toBottomOf="@id/tvResult"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <!-- Row 1 -->
        <Button style="@style/CalcButton" android:text="AC" android:id="@+id/btnAC" />
        <Button style="@style/CalcButton" android:text="%" android:id="@+id/btnPercent" />
        <Button style="@style/CalcButton" android:text="⌫" android:id="@+id/btnBack" />
        <Button style="@style/CalcButton" android:text="÷" android:id="@+id/btnDiv" />

        <!-- Row 2 -->
        <Button style="@style/CalcButton" android:text="7" android:id="@+id/btn7" />
        <Button style="@style/CalcButton" android:text="8" android:id="@+id/btn8" />
        <Button style="@style/CalcButton" android:text="9" android:id="@+id/btn9" />
        <Button style="@style/CalcButton" android:text="×" android:id="@+id/btnMul" />

        <!-- Row 3 -->
        <Button style="@style/CalcButton" android:text="4" android:id="@+id/btn4" />
        <Button style="@style/CalcButton" android:text="5" android:id="@+id/btn5" />
        <Button style="@style/CalcButton" android:text="6" android:id="@+id/btn6" />
        <Button style="@style/CalcButton" android:text="−" android:id="@+id/btnSub" />

        <!-- Row 4 -->
        <Button style="@style/CalcButton" android:text="1" android:id="@+id/btn1" />
        <Button style="@style/CalcButton" android:text="2" android:id="@+id/btn2" />
        <Button style="@style/CalcButton" android:text="3" android:id="@+id/btn3" />
        <Button style="@style/CalcButton" android:text="+" android:id="@+id/btnAdd" />

        <!-- Row 5 -->
        <Button style="@style/CalcButton" android:text="00" android:id="@+id/btn00" />
        <Button style="@style/CalcButton" android:text="0" android:id="@+id/btn0" />
        <Button style="@style/CalcButton" android:text="." android:id="@+id/btnDot" />
        <Button
            android:id="@+id/btnEqual"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="="
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_equal"
            android:padding="18dp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
